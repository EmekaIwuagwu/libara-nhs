# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=libaranhs
DB_PASSWORD=your_secure_password
DB_NAME=libaranhs

# Session
SESSION_SECRET=your_very_long_random_session_secret_here_change_in_production

# Encryption (for NHS credentials)
# Generate a 32-character random string
ENCRYPTION_KEY=32_character_encryption_key_here

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@libaranhs.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./src/public/uploads

# Puppeteer
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# NHS Portal URLs
NHS_SCOTLAND_URL=https://jobs.scot.nhs.uk
NHS_ENGLAND_URL=https://www.jobs.nhs.uk
