<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LibaraNHS</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-slate-50">
    <%- include('../partials/sidebar') %>

    <div class="ml-64 p-8">
        <div class="max-w-5xl mx-auto">
            <h1 class="text-3xl font-bold text-slate-800 mb-8">Manage Your Resumes</h1>

            <% if (successMessage) { %>
                <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                    <%= successMessage %>
                </div>
            <% } %>

            <% if (errorMessage) { %>
                <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                    <%= errorMessage %>
                </div>
            <% } %>

            <!-- Resume Type Tabs -->
            <div class="flex gap-4 mb-8 border-b border-slate-200">
                <button id="fileResumeTab" class="px-6 py-3 font-semibold text-primary border-b-2 border-primary transition">
                    üìÑ File Resumes
                </button>
                <button id="textResumeTab" class="px-6 py-3 font-semibold text-slate-600 hover:text-primary transition">
                    üìù Text Resumes
                </button>
            </div>

            <!-- File Resume Section -->
            <div id="fileResumeSection">
            <!-- Upload Section -->
            <div class="card mb-8">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Upload New Resume</h2>
                <form id="resumeUploadForm" enctype="multipart/form-data" class="space-y-4">
                    <div class="border-2 border-dashed border-slate-300 rounded-lg p-8 text-center hover:border-primary transition">
                        <input type="file" id="resumeFile" name="resume" accept=".pdf,.doc,.docx" class="hidden" required>
                        <label for="resumeFile" class="cursor-pointer">
                            <div class="text-4xl mb-2">üìÑ</div>
                            <p class="text-slate-600">Click to browse or drag and drop</p>
                            <p class="text-sm text-slate-500 mt-1">PDF, DOC, DOCX (max 5MB)</p>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Upload Resume</button>
                </form>
            </div>

            <!-- Resumes List -->
            <div class="card">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Your Resumes</h2>
                <% if (resumes && resumes.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% resumes.forEach(resume => { %>
                            <div class="border rounded-lg p-4 hover:shadow-md transition bg-white">
                                <div class="flex items-start justify-between mb-4">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-slate-800 flex items-center gap-2">
                                            <span class="text-2xl">üìÑ</span>
                                            <%= resume.original_name %>
                                        </h3>
                                        <p class="text-sm text-slate-500 mt-1">
                                            Uploaded: <%= new Date(resume.created_at).toLocaleDateString() %>
                                        </p>
                                        <p class="text-sm text-slate-500">
                                            Size: <%= (resume.file_size / 1024).toFixed(2) %> KB
                                        </p>
                                        <% if (resume.is_default) { %>
                                            <span class="inline-block px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full mt-2">
                                                ‚úì Default Resume
                                            </span>
                                        <% } %>
                                        <% if (resume.base64_data) { %>
                                            <span class="inline-block px-2 py-1 text-xs font-semibold text-purple-800 bg-purple-100 rounded-full mt-2 ml-1">
                                                üîí Secure Storage
                                            </span>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex items-center gap-3 pt-3 border-t border-slate-200">
                                    <!-- Download Button -->
                                    <a href="/dashboard/resume/<%= resume.id %>/download"
                                       class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                                       title="Download Resume">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                        Download
                                    </a>

                                    <% if (!resume.is_default) { %>
                                        <!-- Set Default Button -->
                                        <button data-action="set-default" data-resume-id="<%= resume.id %>"
                                                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-600 bg-slate-50 rounded-lg hover:bg-slate-100 transition"
                                                title="Set as Default">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                            Set Default
                                        </button>
                                    <% } %>

                                    <!-- Delete Button -->
                                    <button data-action="delete" data-resume-id="<%= resume.id %>"
                                            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition ml-auto"
                                            title="Delete Resume">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                        Delete
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-center text-slate-600 py-8">No resumes uploaded yet. Upload your first resume above!</p>
                <% } %>
            </div>
            </div>
            <!-- End File Resume Section -->

            <!-- Text Resume Section -->
            <div id="textResumeSection" class="hidden">
                <!-- Create/Edit Text Resume Form -->
                <div class="card mb-8">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-2xl font-semibold text-slate-800">Create Text Resume</h2>
                        <button id="toggleTextResumeForm" class="btn btn-primary">
                            <span id="formToggleText">+ New Text Resume</span>
                        </button>
                    </div>

                    <form id="textResumeForm" class="space-y-6 hidden">
                        <input type="hidden" id="textResumeId" value="">

                        <div>
                            <label for="resumeName" class="block text-sm font-medium text-slate-700 mb-2">Resume Name *</label>
                            <input type="text" id="resumeName" name="resume_name" required
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="e.g., Nursing Position Resume">
                        </div>

                        <div>
                            <label for="personalStatement" class="block text-sm font-medium text-slate-700 mb-2">Personal Statement</label>
                            <textarea id="personalStatement" name="personal_statement" rows="4"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="Write a brief personal statement highlighting your key strengths and career objectives..."></textarea>
                        </div>

                        <div>
                            <label for="workExperience" class="block text-sm font-medium text-slate-700 mb-2">Work Experience</label>
                            <textarea id="workExperience" name="work_experience" rows="6"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="List your work experience, including job titles, employers, dates, and key responsibilities..."></textarea>
                        </div>

                        <div>
                            <label for="education" class="block text-sm font-medium text-slate-700 mb-2">Education</label>
                            <textarea id="education" name="education" rows="4"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="List your educational qualifications, institutions, and dates..."></textarea>
                        </div>

                        <div>
                            <label for="skills" class="block text-sm font-medium text-slate-700 mb-2">Skills</label>
                            <textarea id="skills" name="skills" rows="4"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="List your key skills and competencies..."></textarea>
                        </div>

                        <div>
                            <label for="certifications" class="block text-sm font-medium text-slate-700 mb-2">Certifications</label>
                            <textarea id="certifications" name="certifications" rows="3"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="List any professional certifications or qualifications..."></textarea>
                        </div>

                        <div>
                            <label for="referencesText" class="block text-sm font-medium text-slate-700 mb-2">References</label>
                            <textarea id="referencesText" name="references_text" rows="4"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="List your professional references..."></textarea>
                        </div>

                        <div>
                            <label for="fullCvText" class="block text-sm font-medium text-slate-700 mb-2">Full CV Text</label>
                            <textarea id="fullCvText" name="full_cv_text" rows="8"
                                class="w-full rounded-lg border-slate-300 focus:border-lime-500 focus:ring-lime-500 px-4 py-2"
                                placeholder="Paste your complete CV text here (used for automation)..."></textarea>
                            <p class="text-sm text-slate-500 mt-1">This field is used to automatically fill application forms</p>
                        </div>

                        <div class="flex gap-3 pt-4">
                            <button type="submit" class="btn btn-primary">
                                <span id="submitBtnText">Save Text Resume</span>
                            </button>
                            <button type="button" id="cancelTextResumeForm" class="btn btn-secondary">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Text Resumes List -->
                <div class="card">
                    <h2 class="text-2xl font-semibold text-slate-800 mb-4">Your Text Resumes</h2>
                    <div id="textResumesList">
                        <p class="text-center text-slate-600 py-8">Loading text resumes...</p>
                    </div>
                </div>
            </div>
            <!-- End Text Resume Section -->

        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
        // Tab switching
        const fileResumeTab = document.getElementById('fileResumeTab');
        const textResumeTab = document.getElementById('textResumeTab');
        const fileResumeSection = document.getElementById('fileResumeSection');
        const textResumeSection = document.getElementById('textResumeSection');

        fileResumeTab.addEventListener('click', () => {
            fileResumeTab.classList.add('text-primary', 'border-b-2', 'border-primary');
            fileResumeTab.classList.remove('text-slate-600');
            textResumeTab.classList.remove('text-primary', 'border-b-2', 'border-primary');
            textResumeTab.classList.add('text-slate-600');
            fileResumeSection.classList.remove('hidden');
            textResumeSection.classList.add('hidden');
        });

        textResumeTab.addEventListener('click', () => {
            textResumeTab.classList.add('text-primary', 'border-b-2', 'border-primary');
            textResumeTab.classList.remove('text-slate-600');
            fileResumeTab.classList.remove('text-primary', 'border-b-2', 'border-primary');
            fileResumeTab.classList.add('text-slate-600');
            textResumeSection.classList.remove('hidden');
            fileResumeSection.classList.add('hidden');
            loadTextResumes();
        });

        // Text Resume functionality
        let textResumes = [];

        async function loadTextResumes() {
            try {
                const response = await fetch('/dashboard/resume/text-resumes');
                const data = await response.json();

                if (data.success) {
                    textResumes = data.textResumes;
                    renderTextResumes();
                }
            } catch (error) {
                console.error('Error loading text resumes:', error);
                document.getElementById('textResumesList').innerHTML = '<p class="text-center text-red-600 py-8">Error loading text resumes</p>';
            }
        }

        function renderTextResumes() {
            const container = document.getElementById('textResumesList');

            if (!textResumes || textResumes.length === 0) {
                container.innerHTML = '<p class="text-center text-slate-600 py-8">No text resumes created yet. Click "+ New Text Resume" to create one!</p>';
                return;
            }

            container.innerHTML = `
                <div class="grid grid-cols-1 gap-4">
                    ${textResumes.map(resume => `
                        <div class="border rounded-lg p-4 hover:shadow-md transition bg-white">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h3 class="font-semibold text-slate-800 flex items-center gap-2">
                                        <span class="text-2xl">üìù</span>
                                        ${resume.resume_name}
                                    </h3>
                                    <p class="text-sm text-slate-500 mt-1">
                                        Created: ${new Date(resume.created_at).toLocaleDateString()}
                                    </p>
                                    ${resume.is_default ? '<span class="inline-block px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full mt-2">‚úì Default Resume</span>' : ''}
                                </div>
                            </div>
                            <div class="flex items-center gap-3 pt-3 mt-3 border-t border-slate-200">
                                <button data-action="edit-text" data-resume-id="${resume.id}"
                                    class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Edit
                                </button>
                                ${!resume.is_default ? `
                                    <button data-action="set-default-text" data-resume-id="${resume.id}"
                                        class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-600 bg-slate-50 rounded-lg hover:bg-slate-100 transition">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        Set Default
                                    </button>
                                ` : ''}
                                <button data-action="delete-text" data-resume-id="${resume.id}"
                                    class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition ml-auto">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Form toggle
        document.getElementById('toggleTextResumeForm').addEventListener('click', () => {
            const form = document.getElementById('textResumeForm');
            form.classList.toggle('hidden');
            if (!form.classList.contains('hidden')) {
                resetTextResumeForm();
            }
        });

        document.getElementById('cancelTextResumeForm').addEventListener('click', () => {
            document.getElementById('textResumeForm').classList.add('hidden');
            resetTextResumeForm();
        });

        function resetTextResumeForm() {
            document.getElementById('textResumeId').value = '';
            document.getElementById('textResumeForm').reset();
            document.getElementById('submitBtnText').textContent = 'Save Text Resume';
            document.getElementById('formToggleText').textContent = '+ New Text Resume';
        }

        // Create/Update text resume
        document.getElementById('textResumeForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                resume_name: document.getElementById('resumeName').value,
                personal_statement: document.getElementById('personalStatement').value,
                work_experience: document.getElementById('workExperience').value,
                education: document.getElementById('education').value,
                skills: document.getElementById('skills').value,
                certifications: document.getElementById('certifications').value,
                references_text: document.getElementById('referencesText').value,
                full_cv_text: document.getElementById('fullCvText').value
            };

            const resumeId = document.getElementById('textResumeId').value;
            const isEdit = resumeId !== '';

            try {
                const url = isEdit ? `/dashboard/resume/text-resumes/${resumeId}` : '/dashboard/resume/text-resumes';
                const method = isEdit ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    alert(isEdit ? 'Text resume updated successfully!' : 'Text resume created successfully!');
                    document.getElementById('textResumeForm').classList.add('hidden');
                    resetTextResumeForm();
                    loadTextResumes();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred: ' + error.message);
            }
        });

        // Event delegation for text resume actions
        document.addEventListener('click', async function(e) {
            const button = e.target.closest('[data-action^="edit-text"], [data-action^="set-default-text"], [data-action^="delete-text"]');
            if (!button) return;

            const action = button.dataset.action;
            const resumeId = parseInt(button.dataset.resumeId);

            if (action === 'edit-text') {
                const resume = textResumes.find(r => r.id === resumeId);
                if (!resume) return;

                document.getElementById('textResumeId').value = resume.id;
                document.getElementById('resumeName').value = resume.resume_name || '';
                document.getElementById('personalStatement').value = resume.personal_statement || '';
                document.getElementById('workExperience').value = resume.work_experience || '';
                document.getElementById('education').value = resume.education || '';
                document.getElementById('skills').value = resume.skills || '';
                document.getElementById('certifications').value = resume.certifications || '';
                document.getElementById('referencesText').value = resume.references_text || '';
                document.getElementById('fullCvText').value = resume.full_cv_text || '';

                document.getElementById('submitBtnText').textContent = 'Update Text Resume';
                document.getElementById('formToggleText').textContent = 'Editing Resume';
                document.getElementById('textResumeForm').classList.remove('hidden');
            } else if (action === 'set-default-text') {
                try {
                    const response = await fetch(`/dashboard/resume/text-resumes/${resumeId}/set-default`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const result = await response.json();

                    if (result.success) {
                        loadTextResumes();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('An error occurred: ' + error.message);
                }
            } else if (action === 'delete-text') {
                if (!confirm('Are you sure you want to delete this text resume?')) return;

                try {
                    const response = await fetch(`/dashboard/resume/text-resumes/${resumeId}`, {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert('Text resume deleted successfully!');
                        loadTextResumes();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('An error occurred: ' + error.message);
                }
            }
        });

        // File Resume upload handler
        document.getElementById('resumeUploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const fileInput = document.getElementById('resumeFile');
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Please select a file to upload');
                return;
            }

            const formData = new FormData();
            formData.append('resume', fileInput.files[0]);

            // Show loading state
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.disabled = true;
            submitButton.textContent = 'üîÑ Processing and storing...';

            try {
                const response = await fetch('/dashboard/resume/upload', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert('‚úì Resume uploaded and stored securely!');
                    window.location.reload();
                } else {
                    alert('‚úó Upload failed: ' + (result.message || 'Unknown error'));
                    submitButton.disabled = false;
                    submitButton.textContent = originalText;
                }
            } catch (error) {
                alert('‚úó An error occurred during upload: ' + error.message);
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        });

        // Event delegation for resume actions
        document.addEventListener('click', async function(e) {
            const button = e.target.closest('[data-action]');
            if (!button) return;

            const action = button.dataset.action;
            const resumeId = button.dataset.resumeId;

            if (action === 'set-default') {
                try {
                    const response = await fetch(`/dashboard/resume/${resumeId}/set-default`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    const data = await response.json();

                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert(data.message || 'Failed to set default resume');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred');
                }
            } else if (action === 'delete') {
                if (!confirm('Are you sure you want to delete this resume? This action cannot be undone.')) {
                    return;
                }

                console.log('[CLIENT] Starting delete for resume ID:', resumeId);

                try {
                    console.log('[CLIENT] Sending DELETE request to:', `/dashboard/resume/${resumeId}`);
                    const response = await fetch(`/dashboard/resume/${resumeId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        credentials: 'same-origin'
                    });

                    console.log('[CLIENT] Response status:', response.status);
                    console.log('[CLIENT] Response ok:', response.ok);

                    let data;
                    const contentType = response.headers.get('content-type');
                    console.log('[CLIENT] Content-Type:', contentType);

                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                        console.log('[CLIENT] Response data:', data);
                    } else {
                        const text = await response.text();
                        console.error('[CLIENT] Non-JSON response:', text);
                        alert('Server returned an invalid response. Check console for details.');
                        return;
                    }

                    if (response.ok && data.success) {
                        console.log('[CLIENT] Delete successful, reloading page...');
                        alert('Resume deleted successfully!');
                        window.location.reload();
                    } else {
                        console.error('[CLIENT] Delete failed:', data.message);
                        alert('Failed to delete resume: ' + (data.message || 'Unknown error'));
                    }
                } catch (error) {
                    console.error('[CLIENT] Exception during delete:', error);
                    alert('An error occurred while deleting the resume: ' + error.message);
                }
            }
        });
    </script>
