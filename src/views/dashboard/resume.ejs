<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LibaraNHS</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-slate-50">
    <%- include('../partials/sidebar') %>

    <div class="ml-64 p-8">
        <div class="max-w-5xl mx-auto">
            <h1 class="text-3xl font-bold text-slate-800 mb-8">Manage Your Resumes</h1>

            <% if (successMessage) { %>
                <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                    <%= successMessage %>
                </div>
            <% } %>

            <% if (errorMessage) { %>
                <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                    <%= errorMessage %>
                </div>
            <% } %>

            <!-- Upload Section -->
            <div class="card mb-8">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Upload New Resume</h2>
                <form id="resumeUploadForm" enctype="multipart/form-data" class="space-y-4">
                    <div class="border-2 border-dashed border-slate-300 rounded-lg p-8 text-center hover:border-primary transition">
                        <input type="file" id="resumeFile" name="resume" accept=".pdf,.doc,.docx" class="hidden" required>
                        <label for="resumeFile" class="cursor-pointer">
                            <div class="text-4xl mb-2">ðŸ“„</div>
                            <p class="text-slate-600">Click to browse or drag and drop</p>
                            <p class="text-sm text-slate-500 mt-1">PDF, DOC, DOCX (max 5MB)</p>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Upload Resume</button>
                </form>
            </div>

            <!-- Resumes List -->
            <div class="card">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Your Resumes</h2>
                <% if (resumes && resumes.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% resumes.forEach(resume => { %>
                            <div class="border rounded-lg overflow-hidden hover:shadow-lg transition">
                                <!-- PDF Preview -->
                                <div class="bg-slate-100 relative" style="height: 300px;">
                                    <% if (resume.mime_type === 'application/pdf') { %>
                                        <iframe
                                            src="/dashboard/resume/<%= resume.id %>/view#toolbar=0&navpanes=0&scrollbar=0"
                                            class="w-full h-full border-0"
                                            title="<%= resume.original_name %>"
                                        ></iframe>
                                    <% } else { %>
                                        <div class="flex items-center justify-center h-full">
                                            <div class="text-center">
                                                <div class="text-6xl mb-2">ðŸ“„</div>
                                                <p class="text-sm text-slate-600"><%= resume.mime_type %></p>
                                            </div>
                                        </div>
                                    <% } %>
                                    <% if (resume.is_default) { %>
                                        <span class="absolute top-2 right-2 bg-green-500 text-white text-xs px-2 py-1 rounded">Default</span>
                                    <% } %>
                                </div>

                                <!-- Resume Info -->
                                <div class="p-4">
                                    <h3 class="font-semibold text-slate-800 truncate" title="<%= resume.original_name %>">
                                        <%= resume.original_name %>
                                    </h3>
                                    <p class="text-xs text-slate-500 mt-1">
                                        Uploaded: <%= new Date(resume.created_at).toLocaleDateString() %>
                                    </p>
                                    <p class="text-xs text-slate-500">
                                        Size: <%= (resume.file_size / 1024).toFixed(2) %> KB
                                    </p>

                                    <!-- Actions -->
                                    <div class="mt-3 flex flex-wrap gap-2">
                                        <a href="/dashboard/resume/<%= resume.id %>/view" target="_blank"
                                           class="text-xs text-primary hover:text-primary-dark font-medium">
                                            View
                                        </a>
                                        <a href="/dashboard/resume/<%= resume.id %>/download"
                                           class="text-xs text-primary hover:text-primary-dark font-medium">
                                            Download
                                        </a>
                                        <% if (!resume.is_default) { %>
                                            <button onclick="setDefault(<%= resume.id %>)"
                                                    class="text-xs text-slate-600 hover:text-slate-800 font-medium">
                                                Set Default
                                            </button>
                                        <% } %>
                                        <button onclick="deleteResume(<%= resume.id %>)"
                                                class="text-xs text-red-600 hover:text-red-800 font-medium">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-center text-slate-600 py-8">No resumes uploaded yet. Upload your first resume above!</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
        // Resume upload handler
        document.getElementById('resumeUploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData();
            formData.append('resume', document.getElementById('resumeFile').files[0]);

            try {
                const response = await fetch('/dashboard/resume/upload', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert('Resume uploaded successfully!');
                    window.location.reload();
                } else {
                    alert(result.message || 'Upload failed');
                }
            } catch (error) {
                alert('An error occurred during upload');
            }
        });

        function setDefault(id) {
            fetch(`/dashboard/resume/${id}/set-default`, { method: 'POST' })
                .then(() => window.location.reload());
        }

        function deleteResume(id) {
            if (confirm('Are you sure you want to delete this resume?')) {
                fetch(`/dashboard/resume/${id}`, { method: 'DELETE' })
                    .then(() => window.location.reload());
            }
        }
    </script>
</body>
</html>
