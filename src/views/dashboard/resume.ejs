<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LibaraNHS</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-slate-50">
    <%- include('../partials/sidebar') %>

    <div class="ml-64 p-8">
        <div class="max-w-5xl mx-auto">
            <h1 class="text-3xl font-bold text-slate-800 mb-8">Manage Your Resumes</h1>

            <% if (successMessage) { %>
                <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                    <%= successMessage %>
                </div>
            <% } %>

            <% if (errorMessage) { %>
                <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                    <%= errorMessage %>
                </div>
            <% } %>

            <!-- Upload Section -->
            <div class="card mb-8">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Upload New Resume</h2>
                <form id="resumeUploadForm" enctype="multipart/form-data" class="space-y-4">
                    <div class="border-2 border-dashed border-slate-300 rounded-lg p-8 text-center hover:border-primary transition">
                        <input type="file" id="resumeFile" name="resume" accept=".pdf,.doc,.docx" class="hidden" required>
                        <label for="resumeFile" class="cursor-pointer">
                            <div class="text-4xl mb-2">üìÑ</div>
                            <p class="text-slate-600">Click to browse or drag and drop</p>
                            <p class="text-sm text-slate-500 mt-1">PDF, DOC, DOCX (max 5MB)</p>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Upload Resume</button>
                </form>
            </div>

            <!-- Resumes List -->
            <div class="card">
                <h2 class="text-2xl font-semibold text-slate-800 mb-4">Your Resumes</h2>
                <% if (resumes && resumes.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% resumes.forEach(resume => { %>
                            <div class="border rounded-lg p-4 hover:shadow-md transition bg-white">
                                <div class="flex items-start justify-between mb-4">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-slate-800 flex items-center gap-2">
                                            <span class="text-2xl">üìÑ</span>
                                            <%= resume.original_name %>
                                        </h3>
                                        <p class="text-sm text-slate-500 mt-1">
                                            Uploaded: <%= new Date(resume.created_at).toLocaleDateString() %>
                                        </p>
                                        <p class="text-sm text-slate-500">
                                            Size: <%= (resume.file_size / 1024).toFixed(2) %> KB
                                        </p>
                                        <% if (resume.is_default) { %>
                                            <span class="inline-block px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full mt-2">
                                                ‚úì Default Resume
                                            </span>
                                        <% } %>
                                        <% if (resume.cloudinary_url) { %>
                                            <span class="inline-block px-2 py-1 text-xs font-semibold text-blue-800 bg-blue-100 rounded-full mt-2 ml-1">
                                                ‚òÅÔ∏è Cloud Storage
                                            </span>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex items-center gap-3 pt-3 border-t border-slate-200">
                                    <!-- Preview Button with Eye Icon -->
                                    <a href="/dashboard/resume/<%= resume.id %>/preview"
                                       target="_blank"
                                       class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                                       title="Preview Resume">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                        </svg>
                                        Preview
                                    </a>

                                    <!-- Download Button -->
                                    <a href="/dashboard/resume/<%= resume.id %>/download"
                                       class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-green-600 bg-green-50 rounded-lg hover:bg-green-100 transition"
                                       title="Download Resume">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                        Download
                                    </a>

                                    <% if (!resume.is_default) { %>
                                        <!-- Set Default Button -->
                                        <button onclick="setDefault(<%= resume.id %>)"
                                                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-600 bg-slate-50 rounded-lg hover:bg-slate-100 transition"
                                                title="Set as Default">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                            Set Default
                                        </button>
                                    <% } %>

                                    <!-- Delete Button with Trash Icon -->
                                    <button onclick="deleteResume(<%= resume.id %>)"
                                            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition ml-auto"
                                            title="Delete Resume">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                        Delete
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-center text-slate-600 py-8">No resumes uploaded yet. Upload your first resume above!</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
        // Resume upload handler
        document.getElementById('resumeUploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const fileInput = document.getElementById('resumeFile');
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Please select a file to upload');
                return;
            }

            const formData = new FormData();
            formData.append('resume', fileInput.files[0]);

            // Show loading state
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.disabled = true;
            submitButton.textContent = '‚òÅÔ∏è Uploading to cloud...';

            try {
                const response = await fetch('/dashboard/resume/upload', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert('‚úì Resume uploaded successfully to cloud storage!');
                    window.location.reload();
                } else {
                    alert('‚úó Upload failed: ' + (result.message || 'Unknown error'));
                    submitButton.disabled = false;
                    submitButton.textContent = originalText;
                }
            } catch (error) {
                alert('‚úó An error occurred during upload: ' + error.message);
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        });

        function setDefault(id) {
            fetch(`/dashboard/resume/${id}/set-default`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                } else {
                    alert(data.message || 'Failed to set default resume');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        async function deleteResume(id) {
            if (!confirm('Are you sure you want to delete this resume? This action cannot be undone.')) {
                return;
            }

            console.log('[CLIENT] Starting delete for resume ID:', id);

            try {
                console.log('[CLIENT] Sending DELETE request to:', `/dashboard/resume/${id}`);
                const response = await fetch(`/dashboard/resume/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    credentials: 'same-origin'
                });

                console.log('[CLIENT] Response status:', response.status);
                console.log('[CLIENT] Response ok:', response.ok);
                console.log('[CLIENT] Response headers:', [...response.headers.entries()]);

                let data;
                const contentType = response.headers.get('content-type');
                console.log('[CLIENT] Content-Type:', contentType);

                if (contentType && contentType.includes('application/json')) {
                    data = await response.json();
                    console.log('[CLIENT] Response data:', data);
                } else {
                    const text = await response.text();
                    console.error('[CLIENT] Non-JSON response:', text);
                    alert('Server returned an invalid response. Check console for details.');
                    return;
                }

                if (response.ok && data.success) {
                    console.log('[CLIENT] Delete successful, reloading page...');
                    alert('Resume deleted successfully!');
                    window.location.reload();
                } else {
                    console.error('[CLIENT] Delete failed:', data.message);
                    alert('Failed to delete resume: ' + (data.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('[CLIENT] Exception during delete:', error);
                alert('An error occurred while deleting the resume: ' + error.message);
            }
        }
    </script>
</body>
</html>
