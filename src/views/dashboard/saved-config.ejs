<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LibaraNHS</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-slate-50">
    <%- include('../partials/sidebar') %>

    <div class="ml-64 p-8">
        <div class="max-w-6xl mx-auto">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold text-slate-800">Saved Configurations</h1>
                <a href="/dashboard/config/create" class="btn btn-primary">+ Create New</a>
            </div>

            <% if (successMessage) { %>
                <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                    <%= successMessage %>
                </div>
            <% } %>

            <% if (configs && configs.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <% configs.forEach(config => { %>
                        <div class="card">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-xl font-semibold text-slate-800"><%= config.config_name %></h3>
                                    <p class="text-slate-600 mt-1"><%= config.job_title %></p>
                                </div>
                                <span class="badge <%= config.is_active ? 'badge-success' : 'badge-warning' %>">
                                    <%= config.is_active ? 'Active' : 'Inactive' %>
                                </span>
                            </div>

                            <div class="space-y-2 mb-4">
                                <p class="text-sm text-slate-600"><strong>Location:</strong> <%= config.job_location %></p>
                                <p class="text-sm text-slate-600"><strong>Skills:</strong> <%= config.skills.substring(0, 100) %><%= config.skills.length > 100 ? '...' : '' %></p>
                                <% if (config.min_salary || config.max_salary) { %>
                                    <p class="text-sm text-slate-600">
                                        <strong>Salary:</strong> £<%= config.min_salary || '0' %> - £<%= config.max_salary || '∞' %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="flex gap-2 flex-wrap">
                                <a href="/dashboard/config/<%= config.id %>/edit" class="text-sm btn btn-secondary">Edit</a>
                                <button onclick="toggleActive(<%= config.id %>)" class="text-sm btn btn-secondary">
                                    <%= config.is_active ? 'Deactivate' : 'Activate' %>
                                </button>
                                <button onclick="duplicateConfig(<%= config.id %>)" class="text-sm text-primary hover:text-primary-dark">Duplicate</button>
                                <button onclick="deleteConfig(<%= config.id %>)" class="text-sm text-red-600 hover:text-red-800">Delete</button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="card text-center py-12">
                    <div class="text-6xl mb-4">⚙️</div>
                    <h3 class="text-xl font-semibold text-slate-800 mb-2">No Configurations Yet</h3>
                    <p class="text-slate-600 mb-6">Create your first application configuration to get started</p>
                    <a href="/dashboard/config/create" class="btn btn-primary">Create Configuration</a>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script>
        async function toggleActive(id) {
            try {
                const response = await fetch(`/dashboard/config/${id}/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    throw new Error('Failed to toggle status');
                }

                const data = await response.json();
                console.log('Toggle response:', data);
                window.location.reload();
            } catch (error) {
                console.error('Toggle error:', error);
                alert('Failed to toggle configuration status. Please try again.');
            }
        }

        async function duplicateConfig(id) {
            try {
                const response = await fetch(`/dashboard/config/${id}/duplicate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    throw new Error('Failed to duplicate config');
                }

                const data = await response.json();
                console.log('Duplicate response:', data);
                window.location.reload();
            } catch (error) {
                console.error('Duplicate error:', error);
                alert('Failed to duplicate configuration. Please try again.');
            }
        }

        async function deleteConfig(id) {
            if (!confirm('Are you sure you want to delete this configuration?')) {
                return;
            }

            try {
                console.log('Deleting config ID:', id);
                const response = await fetch(`/dashboard/config/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                console.log('Delete response status:', response.status);

                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('Delete error data:', errorData);
                    throw new Error(errorData.message || 'Failed to delete configuration');
                }

                const data = await response.json();
                console.log('Delete success:', data);
                alert(data.message || 'Configuration deleted successfully');
                window.location.reload();
            } catch (error) {
                console.error('Delete error:', error);
                alert('Failed to delete configuration: ' + error.message);
            }
        }
    </script>
</body>
</html>
