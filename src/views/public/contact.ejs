<%- include('../partials/header') %>

<section class="py-20">
    <div class="container mx-auto px-6">
        <h1 class="text-5xl font-bold text-center text-slate-800 mb-12">Contact Us</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
            <!-- Contact Form -->
            <div class="card">
                <h2 class="text-2xl font-semibold text-primary mb-6">Send us a message</h2>

                <% if (typeof successMessage !== 'undefined' && successMessage) { %>
                    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                        <%= successMessage %>
                    </div>
                <% } %>

                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                        <%= errorMessage %>
                    </div>
                <% } %>

                <form action="/contact" method="POST" class="space-y-4">
                    <div>
                        <label for="name" class="label">Name</label>
                        <input type="text" id="name" name="name" class="input" required value="<%= typeof oldInput !== 'undefined' && oldInput.name ? oldInput.name : '' %>">
                    </div>

                    <div>
                        <label for="email" class="label">Email</label>
                        <input type="email" id="email" name="email" class="input" required value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : '' %>">
                    </div>

                    <div>
                        <label for="subject" class="label">Subject</label>
                        <input type="text" id="subject" name="subject" class="input" required value="<%= typeof oldInput !== 'undefined' && oldInput.subject ? oldInput.subject : '' %>">
                    </div>

                    <div>
                        <label for="message" class="label">Message</label>
                        <textarea id="message" name="message" rows="5" class="input" required><%= typeof oldInput !== 'undefined' && oldInput.message ? oldInput.message : '' %></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-full">Send Message</button>
                </form>
            </div>

            <!-- Contact Information -->
            <div>
                <div class="card mb-6">
                    <h3 class="text-xl font-semibold text-primary mb-4">Get in Touch</h3>
                    <div class="space-y-4 text-slate-600">
                        <div class="flex items-start">
                            <span class="text-primary mr-3 text-xl">ğŸ“§</span>
                            <div>
                                <p class="font-semibold">Email</p>
                                <p>info@libaranhs.com</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <span class="text-primary mr-3 text-xl">ğŸ“</span>
                            <div>
                                <p class="font-semibold">Phone</p>
                                <p>+44 20 1234 5678</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <span class="text-primary mr-3 text-xl">ğŸ“</span>
                            <div>
                                <p class="font-semibold">Address</p>
                                <p>London, United Kingdom</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h3 class="text-xl font-semibold text-primary mb-4">Business Hours</h3>
                    <div class="space-y-2 text-slate-600">
                        <p><strong>Monday - Friday:</strong> 9:00 AM - 6:00 PM</p>
                        <p><strong>Saturday:</strong> 10:00 AM - 4:00 PM</p>
                        <p><strong>Sunday:</strong> Closed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>
